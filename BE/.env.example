# ============================================
# Django Settings
# ============================================
SECRET_KEY=django-insecure-change-this-in-production-abc123xyz789
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com

# ============================================
# Database Configuration
# ============================================
# Local Development (SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Example for Neon
# DATABASE_URL=postgresql://user:pass@ep-cool-name-123456.us-east-2.aws.neon.tech/recruitment_db?sslmode=require

# Example for Supabase
# DATABASE_URL=postgresql://postgres:password@db.project.supabase.co:5432/postgres

# ============================================
# CORS Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.vercel.app
CORS_ALLOW_CREDENTIALS=True

# ============================================
# Cloudinary (Media Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=123456789012345
CLOUDINARY_API_SECRET=your_api_secret_here

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440
JWT_ALGORITHM=HS256

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@recruitment.com

# ============================================
# AI/ML Services (Optional)
# ============================================
# OpenAI for CV parsing and job matching
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxx

# HuggingFace for embeddings
HUGGINGFACE_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxx

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0
# Production Redis (e.g., Upstash)
# REDIS_URL=rediss://default:password@redis-host.upstash.io:6379

# ============================================
# Celery (Background Tasks - Optional)
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# Sentry (Error Tracking - Optional)
# ============================================
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ============================================
# AWS S3 (Alternative to Cloudinary - Optional)
# ============================================
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=ap-southeast-1

# ============================================
# Security Settings
# ============================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# Production: Set these to True
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Rate Limiting (Optional)
# ============================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_MATCHING=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_CHAT=True
ENABLE_REVIEWS=True
