# ============================================
# API Configuration
# ============================================
# Development
VITE_API_URL=http://127.0.0.1:8000

# Production
# VITE_API_URL=https://recruitment-api.onrender.com

# ============================================
# Application Settings
# ============================================
VITE_APP_NAME=JobBoard
VITE_APP_DESCRIPTION=Nền tảng tuyển dụng thông minh
VITE_APP_VERSION=1.0.0

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_AI_MATCHING=true
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# ============================================
# Third-party Services (Optional)
# ============================================
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Maps API (for company locations)
VITE_GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Facebook Pixel
VITE_FB_PIXEL_ID=123456789012345

# ============================================
# Upload Limits
# ============================================
VITE_MAX_FILE_SIZE=5242880
VITE_MAX_IMAGE_SIZE=2097152
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# ============================================
# Pagination
# ============================================
VITE_JOBS_PER_PAGE=12
VITE_APPLICATIONS_PER_PAGE=10
VITE_MESSAGES_PER_PAGE=20

# ============================================
# UI Configuration
# ============================================
VITE_DEFAULT_THEME=light
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981

# ============================================
# Development Tools
# ============================================
# Enable React DevTools in production (not recommended)
VITE_ENABLE_DEVTOOLS=false

# Enable console logs in production
VITE_ENABLE_LOGS=false

# ============================================
# SEO Configuration
# ============================================
VITE_SITE_URL=https://recruitment.yourdomain.com
VITE_SITE_IMAGE=https://recruitment.yourdomain.com/og-image.jpg
VITE_TWITTER_HANDLE=@yourhandle

# ============================================
# Contact Information
# ============================================
VITE_SUPPORT_EMAIL=support@recruitment.com
VITE_CONTACT_PHONE=+84-xxx-xxx-xxx
VITE_COMPANY_ADDRESS=123 Street, District, City, Vietnam
